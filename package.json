{
  "name": "node-template",
  "version": "1.0.0",
  "description": "Personal boilerplate for modern node.js backend projects",
  "keywords": [
    "boilerplate",
    "modern",
    "node",
    "backend"
  ],
  "main": "dist/index.js",
  "engines": {
    "node": "20"
  },
  "scripts": {
    "build": "swc src -D -d dist",
    "dev": "npm run build -- -w & node --watch-path=./dist dist/index.js",
    "start": "node dist/index.js",
    "lint": "eslint src",
    "test": "jest",
    "type": "tsc --noEmit",
    "type:watch": "tsc --watch"
  },
  "author": "Youssef Meskini",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.454.0",
    "@sentry/node": "^7.77.0",
    "bullmq": "^4.13.3",
    "compression": "^1.7.4",
    "connect-redis": "^7.1.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "pino": "^8.16.1",
    "postmark": "^3.11.0",
    "redis": "^4.6.10",
    "ws": "^8.14.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.95",
    "@swc/jest": "^0.2.29",
    "@total-typescript/ts-reset": "^0.5.1",
    "@types/compression": "^1.7.4",
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.20",
    "@types/express-session": "^1.17.10",
    "@types/jest": "^29.5.7",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.8.10",
    "@types/ws": "^8.5.9",
    "@ymeskini/eslint-config": "^3.0.0",
    "@ymeskini/prettier-config": "^1.0.0",
    "@ymeskini/tsconfig": "^1.1.0",
    "chokidar": "^3.5.3",
    "eslint": "^8.53.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  }
}
